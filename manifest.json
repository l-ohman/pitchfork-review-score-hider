{
  "manifest_version": 3,
  "name": "Pitchfork Score Hider",
  "description": "Hides review scores on Pitchfork",
  "version": "0.0.1",
  "author": "l-ohman",
  "action": {},
  "icons": {
    "16": "icons/sh128.png",
    "32": "icons/sh128.png",
    "48": "icons/sh128.png",
    "128": "icons/sh128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/init.js"],
      "matches": [
        "https://pitchfork.com/reviews/albums/*",
        "https://pitchfork.com/reviews/tracks/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://pitchfork.com/reviews/albums/*",
        "https://pitchfork.com/reviews/tracks/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
